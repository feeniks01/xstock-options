{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "lib": [
            "es2020",
            "dom"
        ],
        "types": [
            "node",
            "mocha",
            "chai"
        ],
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true
    },
    "include": [
        "scripts/**/*",
        "tests/**/*"
    ],
    "exclude": [
        "node_modules",
        "app"
    ]
}